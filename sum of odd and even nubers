#include <stdio.h>

int main() {
    int N;
    int sumEven = 0, sumOdd = 0;

    // Ask the user for the upper limit
    printf("Enter the value of N: ");
    scanf("%d", &N);

    // Calculate the sum of even and odd numbers
    for (int i = 1; i <= N; i++) {
        if (i % 2 == 0) {
            sumEven += i;
        } else {
            sumOdd += i;
        }
    }

    // Print the results
    printf("Sum of even numbers between 1 and %d: %d\n", N, sumEven);
    printf("Sum of odd numbers between 1 and %d: %d\n", N, sumOdd);

    return 0;
}
